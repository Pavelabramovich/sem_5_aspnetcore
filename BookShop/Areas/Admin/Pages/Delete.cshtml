@page
@model BookShop.Areas.Admin.Pages.DeleteModel

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Book</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Book.Title)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Book.Title)
        </dd>

        <dt class="col-sm-2">
            Category
        </dt>
        <dd class="col-sm-10">
            @(Model.Book.Category != null ? Model.Book.Category.Name : "???")
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Book.Price)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Book.Price)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Book.ImagePath)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Book.ImagePath)
        </dd>
    </dl>
    
    <form method="post">
        <input type="hidden" asp-for="Book.Id" />

        <button type="submit" class="btn btn-danger">
            <i class="fa-solid fa-trash-can">&nbsp; DELETE</i>
        </button> 

        <a asp-page="./Index" class="btn btn-primary">
            <i class="fa-solid fa-arrow-left" style="letter-spacing:5px;">&nbsp; BACK</i>
        </a>
    </form>
</div>
