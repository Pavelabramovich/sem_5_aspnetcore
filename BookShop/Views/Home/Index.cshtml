@model IEnumerable<SelectListItem>
@{
    Layout = "_Layout";

    ViewData["Title"] = "Index";
}
@section Scripts
{
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/password_show_hide.js" asp-append-version="true"></script>
}

<div class="container">
    <ol type="A">
        @for (int i = 0; i < 5; i++)
        {
            <li>list element №@i</li>
        }
    </ol>
</div>

<form method="POST">
    <div class="container h-100" style="padding-top: 37px">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-lg-8 col-xl-6">
                <div class="card rounded-3">
                    <div class="card-body py-4 px-4 px-md-5">
                        <h3 class="mb-4 pb-2 pb-md-0 px-md-2 text-center">Form</h3>

                        <div class="row">
                            <div class="col-md-4 col-0"></div>

                            <div class="col-md-8 mb-4">
                                <div class="container h-100">
                                    <div class="row" style="flex-wrap:inherit;">
                                        <input class="form-check-input"
                                               type="checkbox"
                                               style="float: none; margin-left: 0;"
                                               name="checkbox_1"
                                               id="id_checkbox_1">

                                        <label>First checkbox</label>

                                        @* <email mail-to="123">Support</email>
                                        <copyright>Lol</copyright> *@
                                    </div>

                                    <div class="row" style="flex-wrap:inherit;">
                                        <input class="form-check-input"
                                               type="checkbox"
                                               style="float: none; margin-left: 0;"
                                               name="checkbox_2"
                                               id="id_checkbox_2">

                                        <label>Second checkbox</label>
                                    </div>

                                    <div class="row" style="flex-wrap:inherit;">
                                        <div class="col">
                                            @for (int i = 0; i < 3; i++)
                                            {
                                                string radioId = $"id_radio_{i}";

                                                <input type="radio" id=@radioId name="radio" @(i == 0 ? "checked" : string.Empty) />
                                                <label for=@radioId>Radio @i</label>
                                            }
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col mb-4">
                                @{
                                    var loginId = "id_login";
                                }

                                <label class="form-label" for=@loginId>Login</label>

                                <input type="text"
                                       placeholder="Enter login"
                                       id=@loginId
                                       name="login"
                                       class="form-control"
                                       required />

                            </div>
                        </div>

                        <div class="row">
                            <div class="col mb-4">
                                @await Html.PartialAsync("_PasswordInput", model: "id_password")
                            </div>
                        </div>

                        <div class="row">
                            <div class="col mb-4">
                                <select class="form-select" name="selectListDemo" asp-items=@Model></select>
                            </div>
                        </div>

                        <div class="row text-center">
                            <button type="submit" class="btn btn-success btn-lg mb-1">Send</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>
